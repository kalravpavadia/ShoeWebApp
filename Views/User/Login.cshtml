@model UserViewModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div class="m-5 card p-3">
    <form asp-controller="User" asp-action="Save" asp-route-id=1 method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" value="@Model.UserPassword">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Remember me</label>
        </div>
        <input asp-for="@Model.UserPassword" />
        <h1><span asp-validation-for="@Model.UserPassword"></span></h1>
        <button type="submit" class="btn btn-primary">Submit</button>
       
        
    </form>

    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Click here to register</a>


</div>